<p id="notice"><%= notice %></p>

<div>
  <% if @listing.picture.attached? %>
    <%= image_tag @listing.picture, alt: @listing.title %>
  <% else %>
    <%= image_tag "https://placekitten.com/300/300", alt: @listing.title %>
  <% end %>
<div>


<% if @listing.sold %>
  <p> Sorry! This product has already been purchased. </p>
<% elsif current_user && current_user.id == @listing.user_id%>
  <p> You cannot purchase your own items. </p>
<% elsif current_user %>
  <%= button_to "Buy Now", place_order_path %>
<% else %>
  <p> Please log in to place an order. </p>
<% end %>

<p>
  <strong>Title:</strong>
  <%= @listing.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @listing.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @listing.price %>
</p>

<p>
  <strong>Sold:</strong>
  <%= @listing.sold %>
</p>

<p>
  <strong>User:</strong>
  <%= @listing.user_id %>
</p>

<p>
  <strong>Category:</strong>
  <%= @listing.category_id %>
</p>

<% if current_user.id == @listing.user_id%>
  <%= link_to 'Edit', edit_listing_path(@listing) %> |
<% end %>

<%= link_to 'Back', listings_path %>
